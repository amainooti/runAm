{
  "name": "runam",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "sass-watch": "sass --no-source-map --watch sass/main.scss public/css/main.css",
    "nodemon-watch": "cross-env NODE_ENV=development nodemon ./server.js",
    "dev": "npm-run-all --parallel sass-watch nodemon-watch",
    "serve": "cross-env NODE_ENV=production node ./server.js",
    "build": "vite build"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "vite": "^4.2.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "path": "^0.12.7",
    "sass": "^1.60.0"
  }
}
