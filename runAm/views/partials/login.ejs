      <div class="first">
        <label for="">First Name</label>
        <input type="text" name="" id="" placeholder="  Enter your firstname" />
      </div>
      <div class="second">
        <label for="">Last Name</label>
        <input type="text" name="" id="" placeholder="  Enter your lastname" />
      </div>
    </div>
    <label for="">Email</label>
    <input type="email" name="" id="" placeholder="  Enter your firstname" />

    <label for="">Phone Number</label>
    <input type="tel" name="" id="phone" name="phone" placeholder="  Enter your phone number" />

    <label for="">Password</label>
    <input type="password" name="" id="" placeholder="  Enter your password" />

    <label for="">Confirm Password</label>
    <input type="password" name="" id="" placeholder="  Confirm Password" />

    <button type="submit" class="lgbtn2">Sign Up</button>

